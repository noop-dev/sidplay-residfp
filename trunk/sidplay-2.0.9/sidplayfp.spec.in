%define major    2
%define oname    @PACKAGE@
%define name     %{oname}%{major}
%define version  @VERSION@
%define frelease 1
%define release  %{frelease}
%define libsidplayfp 0.1.0

Summary:        A Commodore 64 music player and SID chip emulator.
Name:           %{name}
Version:        %{version}
Release:        %{release}
Source:         %{oname}-%{version}-%{frelease}.tar.bz2
Copyright:      GPL
Group:          Applications/Multimedia
URL:            http://sourceforge.net/projects/sidplay-residfp/
BuildRoot:      %{_tmppath}/%{name}-buildroot
Prefix:         %{_prefix}
Requires:       libsidplayfp >= %{libsidplayfp}
BuildRequires:  libsidplayfp-devel >= %{libsidplayfp}

%description
Sidplayfp is a fork of Sidplay2 and provides a console front end for the
libsidplayfp library.  This library is cycle accurate for improved sound reproduction
and is capable of playing all C64 mono and stereo file formats.  Also supported is a
full C64 emulation environment, which allows tunes to be taken directly from the C64
without the need for special modifications.

%prep
rm -rf $RPM_BUILD_ROOT 
%setup -n %{oname}-%{version} -q

%build
%configure
%make

%install
%makeinstall

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(-,root,root)
%doc AUTHORS COPYING ChangeLog README TODO
